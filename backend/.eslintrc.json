{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "plugins": ["security"],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    // Seguridad básica
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",

    // Node.js
    "no-process-exit": "warn",

    // Calidad de código
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-var": "error",
    "prefer-const": "error",
    "eqeqeq": ["error", "always"],

    // Async/await
    "no-async-promise-executor": "error",
    "require-atomic-updates": "error"
  },
  "ignorePatterns": ["node_modules/", "coverage/", "*.test.js"]
}
